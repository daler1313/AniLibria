@page "/genres"
@using System.Net.Http
@using System.Net.Http.Json
@using System.Collections.Generic



<h3>Genres</h3>

@if (genres == null)
{
    <p>Loading...</p>
}
else if (genres.Count == 0)
{
    <p>No genres found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genre in genres)
            {
                <tr>
                    <td>@genre.Id</td>
                    <td>@genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    public class Genre
    {
        public int Id { get; set; }
        public string Name { get; set; }
    }
    private List<Genre> genres;

    protected override async Task OnInitializedAsync()
    {
        var httpClient = new HttpClient();
        genres = await httpClient.GetFromJsonAsync<List<Genre>>("https://localhost:7015/Genre/api/AniLibria"); // замените "https://localhost:7015/api/genres" на ваш URL-адрес
    }
}
